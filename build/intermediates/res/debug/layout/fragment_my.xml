<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.sq.jzq"
    android:id="@+id/home_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_bg"
    android:orientation="vertical" >

    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:paddingLeft="@dimen/title_paddingleft"
    android:paddingRight="@dimen/title_paddingleft" 
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/background_blue"
    >

     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="@string/my"
            android:textColor="@color/background_white"
            android:textSize="@dimen/home_part_tv_size" />

    <ImageView
        android:id="@+id/my_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/my_shzh"
       	android:layout_alignParentRight="true"
       	android:layout_centerVertical="true"
        android:scaleType="centerInside" />

</RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:orientation="vertical" >

                <com.sq.jzq.views.CircularImage
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/my_head_im"
                    android:layout_height="@dimen/my_head_im"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/my_login_im_margin_top"
                    android:src="@drawable/logo_d" />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/my_login_tv_margin_top"
                    android:clickable="true"
                    android:text="登陆/注销" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_record_bar_height"
                    android:layout_marginTop="@dimen/my_record_bar_margin_top" >

                    <LinearLayout
                        android:id="@+id/my_sqjl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/my_shqjl" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/icon_right"
                            android:text="@string/title_my_record_bar_apply" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/my_yyjl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/my_yyjl" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/icon_right"
                            android:text="@string/title_my_record_bar_invitation" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/my_gz"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/my_wdgzh" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/icon_right"
                            android:text="@string/title_my_record_bar_attention" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/my_data"
                android:background="@color/background_card"
                style="@style/my_rl_item" >

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_marginLeft="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_grzl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_ll_item_tv_size"
                        android:text="@string/title_ll_item_tv"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_sjx" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_msg"
                style="@style/my_rl_item"
                android:background="@color/background_white" >

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_marginLeft="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_wdxx" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_ll_item_tv_size"
                        android:text="@string/title_my_im"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_sjx" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_evaluate"
                android:background="@color/background_card"
                style="@style/my_rl_item" >

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_marginLeft="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_dpj" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_ll_item_tv_size"
                        android:text="@string/title_my_evaluation"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_sjx" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_change_pwd"
                style="@style/my_rl_item"
                android:background="@color/background_white" >

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_marginLeft="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_xgmm" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_ll_item_tv_size"
                        android:text="@string/title_my_modify"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_sjx" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_resume"
                android:background="@color/background_card"
                style="@style/my_rl_item" >

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_marginLeft="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_grjl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_ll_item_tv_size"
                        android:text="@string/title_my_resume"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_sjx" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    
    
