<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.sq.jzq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical" >

    <com.sq.jzq.views.TitleBarView
        android:id="@+id/job_titlebar"
        style="@style/title_bar_font"
        android:text="公司详情" >
    </com.sq.jzq.views.TitleBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/vip_company_im_margin"
        android:layout_marginRight="@dimen/vip_company_im_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.sq.jzq.views.CircularImage
            android:id="@+id/iv_vip_title"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/vip_company_im_margin"
            android:layout_marginTop="@dimen/vip_company_im_margin"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/item_left_right_margin"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_vip_compan_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京艺术钱箱文化传播有限公司" />

                <ImageView
                    android:id="@+id/iv_vip_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:src="@drawable/company_wz_40" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_vip_compan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册时间： 2012-11-20" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/job_card_h"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/vip_sel_loca_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/vip_sel_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/vip_company_title_introduction"
                android:textColor="@color/text_888"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <View style="@style/vertical_line" />

        <LinearLayout
            android:id="@+id/vip_sel_job_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/vip_company_title_release"
                android:textColor="@color/text_888"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <View style="@style/vertical_line" />

        <LinearLayout
            android:id="@+id/vip_sel_loca_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/vip_sel_loca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vip_company_title_user"
                android:textColor="@color/text_888"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <include
                android:id="@+id/line_bule_l"
                layout="@layout/v_bule_line_horizontal_short" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <include
                android:id="@+id/line_bule_middle"
                layout="@layout/v_bule_line_horizontal_short"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <include
                android:id="@+id/line_bule_r"
                layout="@layout/v_bule_line_horizontal_short"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_white" >

        <ScrollView
            android:id="@+id/sv_vip_compan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/vip_company_im_margin"
                android:layout_marginRight="@dimen/vip_company_im_margin"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/vip_company_text_ll"
                    android:layout_marginTop="10dp" >

                    <TextView
                        style="@style/vip_company_text_grey"
                        android:text="@string/vip_company_itme_address" />

                    <TextView
                        android:id="@+id/tv_vip_compan_address"
                        style="@style/vip_company_text_black"
                        android:singleLine="true"
                        android:text="北京市朝阳区远洋中心61号楼2401室" />
                </LinearLayout>

                <LinearLayout style="@style/vip_company_text_ll" >

                    <TextView
                        style="@style/vip_company_text_grey"
                        android:text="@string/vip_company_itme_scale" />

                    <TextView
                        android:id="@+id/tv_vip_compan_scale"
                        style="@style/vip_company_text_black"
                        android:singleLine="true"
                        android:text="100-500人" />
                </LinearLayout>

                <LinearLayout style="@style/vip_company_text_ll" >

                    <TextView
                        style="@style/vip_company_text_grey"
                        android:text="@string/vip_company_itme_industry" />

                    <TextView
                        android:id="@+id/tv_vip_compan_type"
                        style="@style/vip_company_text_black"
                        android:text="艺术文化" />
                </LinearLayout>

                <LinearLayout style="@style/vip_company_text_ll" >

                    <TextView
                        style="@style/vip_company_text_grey"
                        android:text="@string/vip_company_itme_nature" />

                    <TextView
                        android:id="@+id/tv_vip_compan_nature"
                        style="@style/vip_company_text_black"
                        android:text="民营" />
                </LinearLayout>

                <LinearLayout style="@style/vip_company_text_ll" >

                    <TextView
                        style="@style/vip_company_text_grey"
                        android:text="@string/vip_company_itme_website" />

                    <TextView
                        android:id="@+id/tv_vip_compan_website"
                        style="@style/vip_company_text_black"
                        android:text="www.yishuqx.com" />
                </LinearLayout>

                <LinearLayout style="@style/vip_company_text_ll" >

                    <TextView
                        style="@style/vip_company_text_grey"
                        android:text="@string/vip_company_itme_contact" />

                    <TextView
                        android:id="@+id/tv_vip_compan_mobile"
                        style="@style/vip_company_text_black"
                        android:text="13254707789" />
                </LinearLayout>

                <LinearLayout style="@style/vip_company_text_ll" >

                    <TextView
                        style="@style/vip_company_text_grey"
                        android:text="@string/vip_company_itme_tax" />

                    <TextView style="@style/vip_company_text_black" />
                </LinearLayout>

                <LinearLayout style="@style/vip_company_text_ll" >

                    <TextView
                        style="@style/vip_company_text_grey"
                        android:text="@string/vip_company_itme_license" />

                    <TextView style="@style/vip_company_text_black" />
                </LinearLayout>

                <LinearLayout
                    style="@style/vip_company_text_ll"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/vip_company_text_grey"
                        android:text="@string/vip_company_itme_bruef" />

                    <TextView
                        android:id="@+id/tv_vip_compan_bruef"
                        style="@style/vip_company_text_black"
                        android:text="上海耀客文化传媒有限公司成立于2013年11月，是一家具有前沿部署、专业运作和规模化创意企业。" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ListView
            android:id="@+id/job_list_position"
            style="@style/divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:visibility="gone" >
        </ListView>

        <me.maxwin.view.XListView
            android:id="@+id/job_list"
            style="@style/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:visibility="gone" >
        </me.maxwin.view.XListView>
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/Download/homepage/quanbu/chuanxi/jzq3.0/res/layout/activity_vip_compan.xml -->