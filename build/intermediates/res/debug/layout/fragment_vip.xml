<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.sq.jzq"
    android:id="@+id/vip_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical" >

    <com.sq.jzq.views.TitleBarView
        android:id="@+id/vip_titlebar"
        style="@style/title_bar_font"
        android:text="会员"
        app:leftButtonEnable="false" >
    </com.sq.jzq.views.TitleBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/job_card_h"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/vip_sel_job_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/vip_sel_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/vip_vip_enterprise"
                android:textColor="@color/text_888"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <View style="@style/vertical_line" />

        <LinearLayout
            android:id="@+id/vip_sel_loca_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/vip_sel_loca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vip_vip_wanted"
                android:textColor="@color/text_888"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>
<View 
        style="@style/line_style"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <include
                android:id="@+id/line_bule_l"
                layout="@layout/v_bule_line_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <include
                android:id="@+id/line_bule_r"
                layout="@layout/v_bule_line_horizontal"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/vip_list"
            style="@style/divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_white"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none" >
        </ListView>

        <ListView
            android:id="@+id/vip_list_tow"
            style="@style/divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_white"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:visibility="gone" >
        </ListView>
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/Download/homepage/quanbu/chuanxi/jzq3.0/res/layout/fragment_vip.xml -->