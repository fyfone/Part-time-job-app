<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical" >

    <com.sq.jzq.views.TitleBarView
        android:id="@+id/more_titlebar"
        style="@style/title_bar_font"
        android:text="@string/login_but_forget" >
    </com.sq.jzq.views.TitleBarView>

    <LinearLayout
        style="@style/title_login_box"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/registration_margin_top" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
            android:src="@drawable/log_yhm" />

        <include layout="@layout/v_bule_line" />

        <EditText
            android:id="@+id/et_registration_phone"
            style="@style/login_phone_et"
            android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
            android:hint="@string/registration_edittext_hint_phone" />
    </LinearLayout>

    <LinearLayout
        style="@style/title_login_box"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/registration_bt_registration" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
            android:src="@drawable/log_mm" />

        <include layout="@layout/v_bule_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_send_code"
                style="@style/login_box_et"
                android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
                android:hint="@string/registration_edittext_hint_code" />

            <Button
                android:id="@+id/bt_send_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/registration_bt_code_margin"
                android:background="@color/bottom_grey"
                android:gravity="center"
                android:text="@string/registration_bt_code"
                android:textColor="@color/bottom_text_grey"
                android:textSize="@dimen/login_edittext_size" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/title_login_box"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/registration_bt_registration" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
            android:src="@drawable/log_mm" />

        <include layout="@layout/v_bule_line" />
        <EditText
            android:id="@+id/et_send_password_one"
            style="@style/login_pwd_et"
            android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
            android:hint="@string/registration_edittext_hint_password" />
    </LinearLayout>

    <LinearLayout
        style="@style/title_login_box"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/registration_bt_registration" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
            android:src="@drawable/log_mm" />

        <include layout="@layout/v_bule_line" />

        <EditText
            android:id="@+id/et_send_password_two"
            style="@style/login_pwd_et"
            android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
            android:hint="@string/registration_edittext_hint_towpassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
		android:layout_marginLeft="@dimen/login_edittext_im_marginleft">
        <CheckBox 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center_vertical"/>
		<TextView
		    android:id="@+id/agreement_click"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/agreement_click"
		    android:textColor="@color/text_333333"/>
    </LinearLayout>
    <Button
        android:id="@+id/bt_registration"
         style="@style/button_sty"
         android:layout_marginTop="@dimen/login_margin_registration"
        android:text="@string/login_but_forget"
        android:textColor="@color/background_white" />

</LinearLayout><!-- From: file:/D:/Download/homepage/quanbu/chuanxi/jzq3.0/res/layout/activity_registration.xml -->