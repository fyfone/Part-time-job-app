<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:background="@color/background_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_tetle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/my_evaluation_confirm"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_title_right" >

            <Button
                android:id="@+id/bt_dg_ecaluation_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bt_evaluation_selecter"
                android:paddingBottom="@dimen/icon_right"
                android:paddingLeft="@dimen/title_paddingleft"
                android:paddingRight="@dimen/title_paddingleft"
                android:paddingTop="@dimen/icon_right"
                android:text="确定"
                android:textColor="@color/background_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_title_right" >

            <Button
                android:id="@+id/bt_dg_ecaluation_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bt_evaluation_selecter"
                android:paddingBottom="@dimen/icon_right"
                android:paddingLeft="@dimen/title_paddingleft"
                android:paddingRight="@dimen/title_paddingleft"
                android:paddingTop="@dimen/icon_right"
                android:text="取消"
                android:textColor="@color/background_white" />
        </LinearLayout>
    </LinearLayout>

