<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_title_right" 
        android:background="@color/alert_title"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/alert_icon_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/icon_right"
            android:src="@drawable/alert_flag" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请稍等"
            android:textColor="@color/background_white" />
    </LinearLayout>


    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:background="@color/background_white"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="正在查询中..."
        android:textColor="@color/alert_title" />

</LinearLayout>