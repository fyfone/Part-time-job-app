<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.sq.jzq"
    android:id="@+id/home_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_bg"
    android:orientation="vertical" >

    <com.sq.jzq.views.TitleBarView
        android:id="@+id/more_titlebar"
        style="@style/title_bar_font"
        android:text="@string/title_my"
        app:leftButtonEnable="false"
        app:rightButtonBgImg="@drawable/my_shzh"
        app:rightButtonBgImgPress="@drawable/my_shzh_press"
        app:rightButtonEnable="true" >
    </com.sq.jzq.views.TitleBarView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:orientation="vertical" >

                <com.sq.jzq.views.CircularImage
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/my_head_im"
                    android:layout_height="@dimen/my_head_im"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/my_login_tv_margin_top"
                    android:layout_marginTop="@dimen/my_login_im_margin_top"
                    android:background="@drawable/logo_d" />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="登陆/注销" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/mc_data"
                style="@style/my_rl_item"
                android:background="@color/background_card" >

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_marginLeft="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_grzl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_ll_item_tv_size"
                        android:text="@string/mc_data"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_sjx" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mc_yyjl"
                style="@style/my_rl_item"
                android:background="@color/background_white" >

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_marginLeft="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_dpj" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_ll_item_tv_size"
                        android:text="@string/mc_yyjl"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_sjx" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mc_resume_collect"
                style="@style/my_rl_item"
                android:background="@color/background_card" >

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_marginLeft="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_grjl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_ll_item_tv_size"
                        android:text="@string/mc_resume_collect"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_sjx" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mc_msg"
                style="@style/my_rl_item"
                android:background="@color/background_white" >

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_marginLeft="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_wdxx" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_ll_item_tv_size"
                        android:text="@string/title_my_im"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_sjx" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mc_account_secure"
                style="@style/my_rl_item"
                android:background="@color/background_card" >

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_marginLeft="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_xgmm" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_ll_item_tv_size"
                        android:text="@string/title_my_modify"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    style="@style/my_ll_item"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/my_ll_item_about" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_sjx" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>