<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical">

    <com.sq.jzq.views.TitleBarView
        android:id="@+id/sqjl_titlebar"
        style="@style/title_bar_font"
        android:text="@string/title_my_modify" >
    </com.sq.jzq.views.TitleBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/job_card_h"
        android:background="@color/background_white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/company_change_pwd_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/company_changepwd_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/chage_pwd"
                android:textColor="@color/text_888"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <View style="@style/vertical_line" />

        <LinearLayout
            android:id="@+id/company_info_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/company_info_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mc_enterprise_certification"
                android:textColor="@color/text_888"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <include
                android:id="@+id/line_bule_l"
                layout="@layout/v_bule_line_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <include
                android:id="@+id/line_bule_r"
                layout="@layout/v_bule_line_horizontal"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/v_grey_line" />

    <LinearLayout
        android:id="@+id/change_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/title_login_box"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/registration_margin_top" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
                android:src="@drawable/log_mm" />

            <include layout="@layout/v_bule_line" />

            <EditText
                android:id="@+id/et_uppass_pwd"
                style="@style/login_pwd_et"
                android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
                android:hint="@string/registration_edittext_hint_old_password" />
        </LinearLayout>

        <LinearLayout
            style="@style/title_login_box"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/registration_bt_registration" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
                android:src="@drawable/log_mm" />

            <include layout="@layout/v_bule_line" />

            <EditText
                android:id="@+id/et_uppass_nwd"
                style="@style/login_pwd_et"
                android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
                android:hint="@string/registration_edittext_hint_password" />
        </LinearLayout>

        <LinearLayout
            style="@style/title_login_box"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/registration_bt_registration" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
                android:src="@drawable/log_mm" />

            <include layout="@layout/v_bule_line" />

            <EditText
                android:id="@+id/et_uppass_nwd_two"
                style="@style/login_pwd_et"
                android:layout_marginLeft="@dimen/login_edittext_im_marginleft"
                android:hint="@string/registration_edittext_hint_towpassword" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_registration"
            style="@style/button_sty"
            android:layout_marginTop="@dimen/login_margin_registration"
            android:text="@string/affirm_chage"
            android:textColor="@color/background_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/company_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/registration_margin_top"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/business_yyzhzh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/icon_right"
                    android:text="@string/mc_data_itme_tax" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/business_yyzhzh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/icon_right"
                    android:text="@string/mc_data_itme_license" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/tax_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/my_kuangkuang" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/business_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/my_kuangkuang" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>