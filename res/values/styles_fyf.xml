    <style name="vip_company_text_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/vip_recruiters_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/vip_recruiters_title_margin_top</item>
    </style>

    <style name="vip_company_text_grey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_888</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="vip_company_text_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_333333</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="my_edittext_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_333333</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/my_personal_notset</item>
    </style>
    
     <style name="my_edittext_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">@dimen/my_ll_item_about</item>
        <item name="android:textColor">@color/text_333333</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/my_personal_notset</item>
    </style>
    
     <style name="my_edittext_left">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginLeft">@dimen/my_ll_item_about</item>
    </style>
    
    

</resources>