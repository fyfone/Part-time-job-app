<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="my_ll_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="my_rl_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/my_ll_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/background_white</item>
    </style>

    <style name="my_personal_imte">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/my_personal_head_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/my_personal_head_margin_top</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="vip_enterprise_certified_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/text_certified_red</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/edit</item>
        <item name="android:textSize">@dimen/hint_text_size</item>
    </style>

